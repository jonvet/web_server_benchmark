[flake8]
max-line-length = 88
extend-ignore = E203
exclude =
    .git,
    __pycache__,
    build,
    dist,
    .venv,
    venv,
    ENV,
    *.pyc,
    *.egg-info,
    site-packages,
    */site-packages/*,
    .tox,
    .eggs,
    .mypy_cache

# Only check these directories
filename =
    ./python_fast_api/src/*.py,
    ./benchmark/*.py